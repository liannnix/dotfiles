# OpenSSH client configuration file format is described in ssh_config(5) manual page.

Host *
	ForwardAgent yes
	StrictHostKeyChecking no
	UserKnownHostsFile=/dev/null
	ForwardX11 yes
	ForwardX11Trusted yes
	Compression yes
	#ControlMaster auto
	#ControlPersist yes

Host gitery # Гитовница
	HostName gitery.altlinux.org
	User git_liannnix
	Port 222
	# if stored separately
	IdentityFile ~/.ssh/girar.key

Host gyle # Сборочница
	HostName gyle.altlinux.org
	User git_liannnix
	Port 222
	IdentityFile ~/.ssh/girar.key

Host apocrypha # apocrypha
	HostName apocrypha.smb.basealt.ru
	User liannnix
	SetEnv XDG_CURRENT_DESKTOP=kde
	RequestTTY yes
	RemoteCommand tmux a || tmux

Host orion # orion
	HostName orion.giran.cyou
	User liannnix
	SetEnv XDG_CURRENT_DESKTOP=kde
	RequestTTY yes
	RemoteCommand tmux a || tmux

Host ttk-ap # ttk-ap
	HostName ttk-ap.link.giran.cyou
	User lian
	Port 4422

Host ttk-cpe # ttk-cpe
	HostName ttk-cpe.link.giran.cyou
	User lian

