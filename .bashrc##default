# ~/.bashrc
# The individual per-interactive-shell startup file.
# shellcheck disable=SC1090
# shellcheck disable=SC2139

# Source global definitions.
if [ -r /etc/bashrc ]; then
	. /etc/bashrc
fi

## ENV list
export EDITOR=nvim

## GPG pinentry fix
export GPG_TTY=
GPG_TTY=$(tty)

# Export secret API keys
. "$HOME/.api_keys.env"

# Export urldecode function
. "$HOME/.scripts/urldecode.sh"

# Source user defined bash autocompletions
for file in "$HOME"/.user_completions/*; do
    [ -f "$file" ] && . "$file"
done

export PATH="$PATH:$HOME/.local/bin"
export PATH="$PATH:$HOME/go/bin"

# Set tmux title for ssh
. "$HOME/.scripts/set-tmux-title.sh" >/dev/null 2>&1 || true
. "$HOME/.scripts/common_functions.sh" >/dev/null 2>&1 &&
    export PROMPT_COMMAND="$PROMPT_COMMAND; (generate_tmux_local_pane_name &)"

# Fix tmux term type
alias tmux='TERM=xterm-256color tmux'

# Neovim start editor and auto-save
alias sudoedit="$HOME/.scripts/sudoedit_autosave.sh"

# Sync bash history between terminals
export PROMPT_COMMAND="history -a; history -n"

# Set QT theme to adwaita-dark
export QT_STYLE_OVERRIDE=adwaita-dark
export QT_AUTO_SCREEN_SCALE_FACTOR=1
export QT_SCALE_FACTOR=1.4
export QT_QPA_PLATFORM=wayland
export QT_QPA_PLATFORMTHEME=gnome
export QT_LINUX_ACCESSIBILITY_ALWAYS_ON=1


